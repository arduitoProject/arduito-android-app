<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VisualizarCamaraActivity" >

    <TextView
        android:id="@+id/textViewCmdSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:textSize="8sp" />

    <RelativeLayout
        android:id="@+id/Vid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/moveCamUp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="@android:drawable/editbox_background" >

    </RelativeLayout>


    <Button
        android:id="@+id/moveCamUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/moveCamRight"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="arriba"
        android:textColor="@color/boton_oscuro"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textEnviosACamara"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Vid"
        android:layout_alignParentTop="true"
        android:text="No es posible mover la cÃ¡mara" />

    <Button
        android:id="@+id/moveCamDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewCmdSend"
        android:layout_alignLeft="@+id/moveCamUp"
        android:background="@android:color/transparent"
        android:text="abajo"
        android:textColor="@color/boton_oscuro"
        android:textSize="24sp" />

    <Button
        android:id="@+id/moveCamLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/moveCamDown"
        android:layout_toRightOf="@+id/textViewCmdSend"
        android:background="@android:color/transparent"
        android:text="izquierda"
        android:textColor="@color/boton_oscuro"
        android:textSize="24sp" />

    <Button
        android:id="@+id/moveCamRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/moveCamDown"
        android:layout_alignRight="@+id/Vid"
        android:background="@android:color/transparent"
        android:text="derecha"
        android:textColor="@color/boton_oscuro"
        android:textSize="24sp" />

 

</RelativeLayout>