<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConfiguracionGeneralActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Configuraci칩n general"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/boton_oscuro"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewHOST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="26dp"
        android:textColor="@color/boton_oscuro"
        android:textSize="18sp"
        android:text="Direcci칩n servidor"/>

    <EditText
        android:id="@+id/editTextHOST"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewHOST"
        android:layout_below="@+id/textViewHOST"
        android:ems="10" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textViewCAMARA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextHOST"
        android:layout_below="@+id/editTextHOST"
        android:layout_marginTop="31dp"
        android:textColor="@color/boton_oscuro"
        android:textSize="18sp"
        android:text="Usuario c치mara" />

    <EditText
        android:id="@+id/editTextCAMARA"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewCAMARA"
        android:layout_below="@+id/textViewCAMARA"
        android:ems="10" />

    <Button
        android:id="@+id/buttonGUARDAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextCAMARA"
        android:layout_alignParentBottom="true"
        android:text="Guardar" 
        android:background="@android:color/transparent"
        android:textColor="@color/boton_oscuro"
        android:textSize="24sp" />
       

    <Button
        android:id="@+id/buttonCANCELAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonGUARDAR"
        android:layout_alignBottom="@+id/buttonGUARDAR"
        android:layout_alignParentRight="true"
        android:text="Cancelar"
        android:background="@android:color/transparent"
        android:textColor="@color/boton_oscuro"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextPass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textViewpassword"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextPass"
        android:layout_below="@+id/editTextCAMARA"
        android:layout_marginTop="28dp"
        android:text="Pass c치mara"
        android:textColor="@color/boton_oscuro"
        android:textSize="18sp" />

</RelativeLayout>
