<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <EditText
        android:id="@+id/codigo_registro_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreUsuario_login"
        android:layout_centerHorizontal="true"
        android:hint="CÃ³digo de registro"
        android:layout_marginTop="48dp"
        android:ems="10"/>

    <Button
        android:id="@+id/boton_ayuda_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton_verificar_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:text="Ayuda"
        android:textColor="@color/boton_oscuro"
        android:gravity="center_horizontal"
        android:textSize="16sp" />

    <Button
        android:id="@+id/boton_verificar_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/codigo_registro_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@android:color/transparent"
        android:text="Ingresar"
        android:textColor="@color/boton_oscuro"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/boton_ayuda_login"
        android:alpha="0.6"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        android:fitsSystemWindows="false"
        android:src="@drawable/a2_rojo" />

    <EditText
        android:id="@+id/nombreUsuario_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/codigo_registro_login"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Nombre de usuario" />

</RelativeLayout>
